<UserControl x:Class="GameDamageCalculator.UI.Controls.CharacterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Resources 없음 - MainWindow 스타일 상속 -->
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            
            <!-- 캐릭터 섹션 -->
            <Border Style="{DynamicResource SectionBorder}">
                <StackPanel>
                    <TextBlock Text="캐릭터" Style="{DynamicResource SectionTitle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="캐릭터" Style="{DynamicResource LabelText}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cboCharacter" Grid.Column="1" Style="{DynamicResource ComboStyle}"
                                  SelectionChanged="CboCharacter_SelectionChanged"/>
                        
                        <TextBlock Text="스킬" Style="{DynamicResource LabelText}" Grid.Row="1" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <ComboBox x:Name="cboSkill" Grid.Row="1" Grid.Column="1" Style="{DynamicResource ComboStyle}" Margin="0,8,0,0"
                                  SelectionChanged="CboSkill_SelectionChanged"/>
                        
                        <TextBlock Text="잠재능력" Style="{DynamicResource LabelText}" Grid.Row="2" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
                            <ComboBox x:Name="cboPotentialAtk" Style="{DynamicResource ComboStyle}" Width="55"
                                      SelectionChanged="Potential_SelectionChanged">
                                <ComboBoxItem Content="0" IsSelected="True"/>
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>
                            <TextBlock Text="공" Foreground="#666" VerticalAlignment="Center" Margin="3,0,8,0" FontSize="10"/>
                            
                            <ComboBox x:Name="cboPotentialDef" Style="{DynamicResource ComboStyle}" Width="55"
                                      SelectionChanged="Potential_SelectionChanged">
                                <ComboBoxItem Content="0" IsSelected="True"/>
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>
                            <TextBlock Text="방" Foreground="#666" VerticalAlignment="Center" Margin="3,0,8,0" FontSize="10"/>
                            
                            <ComboBox x:Name="cboPotentialHp" Style="{DynamicResource ComboStyle}" Width="55"
                                      SelectionChanged="Potential_SelectionChanged">
                                <ComboBoxItem Content="0" IsSelected="True"/>
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>
                            <TextBlock Text="생" Foreground="#666" VerticalAlignment="Center" Margin="3,0,0,0" FontSize="10"/>
                        </StackPanel>
                        
                        <TextBlock Text="초월" Style="{DynamicResource LabelText}" Grid.Row="3" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <ComboBox x:Name="cboTranscend" Grid.Row="3" Grid.Column="1" Style="{DynamicResource ComboStyle}" 
                                Width="100" HorizontalAlignment="Left" Margin="0,8,0,0"
                                SelectionChanged="CboTranscend_SelectionChanged"/>
                    </Grid>
                    
                    <CheckBox x:Name="chkSkillEnhanced" Content="스킬 강화" 
                              Style="{DynamicResource CheckBoxStyle}" Margin="0,10,0,0"/>
                    
                    <!-- 세트 -->
                    <TextBlock Text="세트" Style="{DynamicResource LabelText}" Margin="0,15,0,5" FontWeight="SemiBold" Foreground="#272727"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="cboEquipSet1" Style="{DynamicResource ComboStyle}"
                                  SelectionChanged="CboEquipSet_SelectionChanged"/>
                        <ComboBox x:Name="cboSetCount1" Grid.Column="1" Style="{DynamicResource ComboStyle}" Margin="5,0,0,0"
                                  SelectionChanged="CboSetCount1_SelectionChanged">
                            <ComboBoxItem Content="2세트"/>
                            <ComboBoxItem Content="4세트" IsSelected="True"/>
                        </ComboBox>
                    </Grid>
                    
                    <Grid x:Name="gridEquipSet2" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="cboEquipSet2" Style="{DynamicResource ComboStyle}"
                                  SelectionChanged="CboEquipSet_SelectionChanged"/>
                        <TextBlock Text="2세트" Grid.Column="1" Foreground="#666" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" FontSize="11"/>
                    </Grid>

                    <!-- 메인옵션 -->
                    <TextBlock Text="메인옵션" FontWeight="Bold" Margin="0,10,0,5"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                    
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="무기1" Width="45" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboWeapon1Main" Width="80" SelectionChanged="MainOption_Changed"/>
                            <TextBlock x:Name="txtWeapon1MainValue" Width="40" Text="" TextAlignment="Center" 
                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="무기2" Width="45" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboWeapon2Main" Width="80" SelectionChanged="MainOption_Changed"/>
                            <TextBlock x:Name="txtWeapon2MainValue" Width="40" Text="" TextAlignment="Center" 
                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="방어구1" Width="45" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboArmor1Main" Width="80" SelectionChanged="MainOption_Changed"/>
                            <TextBlock x:Name="txtArmor1MainValue" Width="40" Text="" TextAlignment="Center" 
                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="방어구2" Width="45" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboArmor2Main" Width="80" SelectionChanged="MainOption_Changed"/>
                            <TextBlock x:Name="txtArmor2MainValue" Width="40" Text="" TextAlignment="Center" 
                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- 서브옵션 -->
                    <TextBlock Text="서브옵션 (좌클릭 +1 / 우클릭 -1)" FontWeight="Bold" Margin="0,10,0,5"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub1Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub1Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub1Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub2Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub2Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub2Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub3Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub3Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub3Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub4Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub4Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub4Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub5Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub5Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub5Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub6Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub6Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub6Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub7Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub7Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub7Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub8Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub8Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub8Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="0,2,10,2">
                            <ComboBox x:Name="cboSub9Type" Width="70" SelectionChanged="SubOption_Changed"/>
                            <TextBox x:Name="txtSub9Tier" Width="30" Text="0" TextAlignment="Center" TextChanged="SubOption_TextChanged"/>
                            <Border Width="20" Background="#DDD" Cursor="Hand" 
                                    MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSub9Tier">
                                <TextBlock Text="▲▼" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- 장신구 -->
                    <TextBlock Text="장신구" FontWeight="Bold" Margin="0,10,0,5"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,2,15,2">
                            <TextBlock Text="성급" Width="35" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboAccessoryGrade" Width="60" SelectionChanged="CboAccessoryGrade_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="0,2,15,2">
                            <TextBlock Text="옵션" Width="35" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboAccessoryMain" Width="80" SelectionChanged="CboAccessoryOption_SelectionChanged"/>
                            <TextBlock x:Name="txtAccessoryMainValue" Width="40" TextAlignment="Center" 
                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel x:Name="panelAccessorySub" Orientation="Horizontal" Grid.Column="2" Margin="0,2,0,2" Visibility="Collapsed">
                            <TextBlock Text="부옵션" Width="40" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboAccessorySub" Width="80" SelectionChanged="CboAccessoryOption_SelectionChanged"/>
                            <TextBlock x:Name="txtAccessorySubValue" Width="40" TextAlignment="Center" 
                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- 진형 -->
                    <TextBlock Text="진형" Style="{DynamicResource LabelText}" Margin="0,15,0,5" FontWeight="SemiBold" Foreground="#272727"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="cboFormation" Style="{DynamicResource ComboStyle}"
                                  SelectionChanged="CboFormation_SelectionChanged"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                            <RadioButton x:Name="rbBack" Content="후방" Foreground="#272727" 
                                         GroupName="Position" IsChecked="True" 
                                         Checked="Formation_PositionChanged" Margin="0,0,10,0"/>
                            <RadioButton x:Name="rbFront" Content="전방" Foreground="#272727" 
                                         GroupName="Position"
                                         Checked="Formation_PositionChanged"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 스탯 출력 -->
            <Border Style="{DynamicResource SectionBorder}">
                <StackPanel>
                    <TextBlock Text="스탯" Style="{DynamicResource SectionTitle}"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="공격력" Width="50"/>
                        <TextBlock x:Name="txtStatAtkBase" Text="0" Width="80" Foreground="#CCC"/>
                        <TextBlock Text="방어력" Width="50" Margin="10,0,0,0"/>
                        <TextBlock x:Name="txtStatDefBase" Text="0" Width="80" Foreground="#CCC"/>
                        <TextBlock Text="생명력" Width="50" Margin="10,0,0,0"/>
                        <TextBlock x:Name="txtStatHpBase" Text="0" Width="80" Foreground="#CCC"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="최종 공격" Width="50"/>
                        <TextBlock x:Name="txtStatAtk" Text="0" Width="80" Foreground="#4FC3F7"/>
                        <TextBlock Text="최종 방어" Width="50" Margin="10,0,0,0"/>
                        <TextBlock x:Name="txtStatDef" Text="0" Width="80" Foreground="#4FC3F7"/>
                        <TextBlock Text="최종 생명" Width="50" Margin="10,0,0,0"/>
                        <TextBlock x:Name="txtStatHp" Text="0" Width="80" Foreground="#4FC3F7"/>
                    </StackPanel>
                    
                    <Grid Margin="0,8,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="치명타 확률" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatCri" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="치명타 피해" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatCriDmg" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="약점공격 확률" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatWek" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="약점공격 피해" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatWekDmg" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="주는 피해량" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatDmgDealt" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="보스 피해량" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatBossDmg" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="1-3인기 주는피해" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatDmg1to3" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,5,0">
                            <TextBlock Text="4-5인기 주는피해" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatDmg4to5" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="방어 관통" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatArmPen" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="막기 확률" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatBlk" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="효과 적중" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatEffHit" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="효과 저항" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatEffRes" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="효과 적중확률" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatEffAcc" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="받피감" Style="{DynamicResource LabelText}"/>
                            <TextBox x:Name="txtStatDmgRdc" Text="0" Style="{DynamicResource OutputBox}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 펫 -->
            <Border Style="{DynamicResource SectionBorder}">
                <StackPanel>
                    <TextBlock Text="펫" Style="{DynamicResource SectionTitle}"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="펫 선택" Style="{DynamicResource LabelText}"/>
                            <ComboBox x:Name="cboPet" Style="{DynamicResource ComboStyle}"
                                      SelectionChanged="CboPet_SelectionChanged"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="성급" Style="{DynamicResource LabelText}"/>
                            <ComboBox x:Name="cboPetStar" Style="{DynamicResource ComboStyle}"
                                      SelectionChanged="CboPet_SelectionChanged">
                                <ComboBoxItem Content="4성"/>
                                <ComboBoxItem Content="5성"/>
                                <ComboBoxItem Content="6성" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="펫 옵션" Style="{DynamicResource LabelText}" Margin="0,5,0,5"/>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="cboPetOpt1" Style="{DynamicResource ComboStyle}" SelectionChanged="PetOption_Changed">
                            <ComboBoxItem Content="없음" IsSelected="True"/>
                            <ComboBoxItem Content="공격력%"/>
                            <ComboBoxItem Content="방어력%"/>
                            <ComboBoxItem Content="생명력%"/>
                        </ComboBox>
                        <TextBox x:Name="txtPetOpt1" Grid.Column="1" Text="0" Style="{DynamicResource InputBox}" Margin="5,0,0,0" TextChanged="PetOption_Changed"/>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="cboPetOpt2" Style="{DynamicResource ComboStyle}" SelectionChanged="PetOption_Changed">
                            <ComboBoxItem Content="없음" IsSelected="True"/>
                            <ComboBoxItem Content="공격력%"/>
                            <ComboBoxItem Content="방어력%"/>
                            <ComboBoxItem Content="생명력%"/>
                        </ComboBox>
                        <TextBox x:Name="txtPetOpt2" Grid.Column="1" Text="0" Style="{DynamicResource InputBox}" Margin="5,0,0,0" TextChanged="PetOption_Changed"/>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="cboPetOpt3" Style="{DynamicResource ComboStyle}" SelectionChanged="PetOption_Changed">
                            <ComboBoxItem Content="없음" IsSelected="True"/>
                            <ComboBoxItem Content="공격력%"/>
                            <ComboBoxItem Content="방어력%"/>
