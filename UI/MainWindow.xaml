                        <TextBox x:Name="txtMyStatEffRes" Grid.Row="11" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 효과 적중 확률 / 회복량 증가 -->
                        <TextBlock Text="효과 적중 확률" Grid.Row="12" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="회복량 증가" Grid.Row="12" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatEffAcc" Grid.Row="13" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,5,5"/>
                        <TextBox Grid.Row="13" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 받는 피해 감소 -->
                        <TextBlock Text="받는 피해 감소" Grid.Row="14" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="막기 확률" Grid.Row="14" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatDmgRdc" Grid.Row="15" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMyStatBlk" Grid.Row="15" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>

                        <!-- 속공 -->
                        <TextBlock Text="속공" Grid.Row="16" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatSpd" Grid.Row="17" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,0,5"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- ==================== 3컬럼: 대상 + 계산결과 ==================== -->
            <StackPanel Grid.Column="2">
                
                <!-- ===== 보스 ===== -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <!-- 전투 모드 선택 -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <RadioButton x:Name="rbBoss" Content="보스" IsChecked="True" GroupName="BattleMode" Checked="BattleMode_Changed"/>
                            <RadioButton x:Name="rbMob" Content="잡몹" GroupName="BattleMode" Margin="10,0,0,0" Checked="BattleMode_Changed"/>
                        </StackPanel>

                        <!-- 보스 타입 (보스 선택 시만 표시) -->
                        <StackPanel x:Name="spBossType" Grid.Column="0" Orientation="Horizontal" Margin="0,0,5,8">
                            <RadioButton x:Name="rbSiege" Content="공성" GroupName="BossType" IsChecked="True" 
                                         Checked="BossType_Changed" Foreground="#272727" Margin="0,0,5,0"/>
                            <RadioButton x:Name="rbRaid" Content="레이드" GroupName="BossType" 
                                         Checked="BossType_Changed" Foreground="#272727" Margin="0,0,5,0"/>
                            <RadioButton x:Name="rbDescend" Content="강림" GroupName="BossType" 
                                         Checked="BossType_Changed" Foreground="#272727"/>
                        </StackPanel>

                        <!-- 보스/잡몹 리스트 드롭다운 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,5,8">
                            <ComboBox x:Name="cboBoss" SelectionChanged="CboBoss_SelectionChanged" Width="160" Visibility="Visible"/>
                            <ComboBox x:Name="cboMob" SelectionChanged="CboMob_SelectionChanged" Width="160" Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- 방어력 / 방증% / 피감 -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="방어력" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="방증%" Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="피감" Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelText}"/>
                            
                            <TextBox x:Name="txtBossDef" Grid.Row="1" Grid.Column="0" Text="0" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtBossDefInc" Grid.Row="1" Grid.Column="1" Text="0" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtBossDmgRdc" Grid.Row="1" Grid.Column="2" Text="0"/>
                        </Grid>
                        
                        <!-- 1인기 / 3인기 / 5인기 감소% -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="1인기 감소%" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="3인기 감소%" Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="5인기 감소%" Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelText}"/>
                            
                            <TextBox x:Name="txtBoss1TargetRdc" Grid.Row="1" Grid.Column="0" Text="0" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtBoss3TargetRdc" Grid.Row="1" Grid.Column="1" Text="0" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtBoss5TargetRdc" Grid.Row="1" Grid.Column="2" Text="0"/>
                        </Grid>

                        <!-- 1인기 / 3인기 / 5인기 감소% -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="방깎" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="취약" Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="받피증" Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelText}"/>
                            
                            <TextBox x:Name="txtBossDefRed" Grid.Row="1" Grid.Column="0" Text="0" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtBossVulnerable" Grid.Row="1" Grid.Column="1" Text="0" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtBossDmgTaken" Grid.Row="1" Grid.Column="2" Text="0"/>
                        </Grid>

                            <!-- 생명력 -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="생명력" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                            
                            <TextBox x:Name="txtBossHp" Grid.Row="1" Grid.Column="0" Text="0" Margin="0,0,5,0"/>
                        </Grid>
                        
                        <StackPanel x:Name="panelBossCondition" Visibility="Collapsed">
                            <CheckBox x:Name="chkBossCondition" Checked="BossCondition_Changed" Unchecked="BossCondition_Changed"/>
                            <TextBlock x:Name="txtBossCondition"/>
                        </StackPanel>
                        
                        <!-- 상황 체크박스 -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="상황" Width="40" VerticalAlignment="Center" Style="{StaticResource LabelText}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox x:Name="chkMyCritical" Content="치명타" IsChecked="True" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#272727"/>
                            <CheckBox x:Name="chkMyWeakpoint" Content="약공" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#272727"/>
                            <CheckBox x:Name="chkMyBlock" Content="막기" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#272727"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox x:Name="chkMyLostHpCondition" Content="체력조건" VerticalAlignment="Center" Foreground="#272727"/>
                            <CheckBox x:Name="chkMySkillCondition" Content="특정조건" VerticalAlignment="Center" Foreground="#272727"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox x:Name="chkMyStatusEffect" Content="상태이상 확정" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"  Margin="0,5,0,0">
                            <TextBlock Text="상태이상 스택" Width="80"  VerticalAlignment="Center" Style="{StaticResource LabelText}"/>
                            <TextBox x:Name="txtMyTargetStackCount" Width="50" Text="0" VerticalAlignment="Center" TextChanged="BossOption_Changed"/>
                        </StackPanel>
                        
                        <!-- 버튼 -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="계산 버튼" Style="{StaticResource CalcButton}" Click="BtnCalculate_Click" Margin="0,0,10,0"/>
                            <Button Content="초기화 버튼" Style="{StaticResource CalcButton}" Click="BtnReset_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- ===== 계산 결과 ===== -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <TextBlock Text="계산 결과" Style="{StaticResource SectionTitle}"/>
                        
                        <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="txtResult" TextWrapping="Wrap" Foreground="#272727"
                                       Text="계산 버튼을 눌러 결과를 확인하세요."/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
