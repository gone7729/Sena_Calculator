                        <!-- 디버프 표시용 (숨김) -->
                        <TextBlock x:Name="txtBossDefRed" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtBossDmgTaken" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtBossVulnerable" Visibility="Collapsed"/>
                        <StackPanel x:Name="panelBossCondition" Visibility="Collapsed">
                            <CheckBox x:Name="chkBossCondition" Checked="BossCondition_Changed" Unchecked="BossCondition_Changed"/>
                            <TextBlock x:Name="txtBossCondition"/>
                        </StackPanel>
                        
                        <!-- 상황 체크박스 -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="상황" Width="40" VerticalAlignment="Center" Style="{StaticResource LabelText}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox x:Name="chkCritical" Content="치명타" IsChecked="True" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#272727"/>
                            <CheckBox x:Name="chkWeakpoint" Content="약공" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#272727"/>
                            <CheckBox x:Name="chkBlock" Content="막기" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#272727"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox x:Name="chkLostHpCondition" Content="체력조건" VerticalAlignment="Center" Foreground="#272727"/>
                            <CheckBox x:Name="chkSkillCondition" Content="특정조건" VerticalAlignment="Center" Foreground="#272727"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox x:Name="chkStatusEffect" Content="상태이상 확정" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"  Margin="0,5,0,0">
                            <TextBlock Text="상태이상 스택" Width="80"  VerticalAlignment="Center" Style="{StaticResource LabelText}"/>
                            <TextBox x:Name="txtTargetStackCount" Width="50" Text="0" VerticalAlignment="Center" TextChanged="BossOption_Changed"/>
                        </StackPanel>
                        
                        <!-- 버튼 -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="계산 버튼" Style="{StaticResource CalcButton}" Click="BtnCalculate_Click" Margin="0,0,10,0"/>
                            <Button Content="초기화 버튼" Style="{StaticResource CalcButton}" Click="BtnReset_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- ===== 계산 결과 ===== -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <TextBlock Text="계산 결과" Style="{StaticResource SectionTitle}"/>
                        
                        <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="txtResult" TextWrapping="Wrap" Foreground="#272727"
                                       Text="계산 버튼을 눌러 결과를 확인하세요."/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
