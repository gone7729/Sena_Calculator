                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding AvailableMainOptions}"
                                  SelectedItem="{Binding MainStatName, Mode=TwoWay}"
                                  FontSize="10"
                                  Height="26"
                                  Background="#262a33"
                                  Foreground="#e2e8f0"
                                  BorderBrush="#363b47"/>

