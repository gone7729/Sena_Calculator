<Window x:Class="GameDamageCalculator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="세븐나이츠 시뮬레이션" 
        Height="900" Width="1500"
        Background="#272727"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- ========== SectionBorder ========== -->
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#272727"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <!-- ========== SectionTitle ========== -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#272727"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- ========== LabelText ========== -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#272727"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
        
        <!-- ========== InputBox ========== -->
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#272727"/>
            <Setter Property="BorderBrush" Value="#272727"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <!-- ========== ComboStyle ========== -->
        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#272727"/>
            <Setter Property="BorderBrush" Value="#272727"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <!-- ========== OutputBox ========== -->
        <Style x:Key="OutputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#272727"/>
            <Setter Property="BorderBrush" Value="#272727"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        
        <!-- ========== CheckBoxStyle ========== -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#272727"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,3,15,3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- ========== CalcButton ========== -->
        <Style x:Key="CalcButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#272727"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ========== BuffOptionButtonStyle ========== -->
        <Style x:Key="BuffOptionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="Background" Value="#3a3a3a"/>
            <Setter Property="Foreground" Value="#ccc"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 타이틀 + 프리셋 -->
        <Border Grid.Row="0" Background="#3a3a3a" Padding="10" Margin="0,0,0,10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="세븐나이츠 시뮬레이션" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           VerticalAlignment="Center"/>

                <!-- 프리셋 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ComboBox x:Name="cboPreset" Width="150" Margin="0,0,5,0"
                              SelectionChanged="CboPreset_SelectionChanged"/>
                    <Button Content="저장" Width="50" Margin="0,0,5,0" Click="BtnSavePreset_Click"/>
                    <Button Content="새로저장" Width="60" Margin="0,0,5,0" Click="BtnSaveAsPreset_Click"/>
                    <Button Content="삭제" Width="50" Click="BtnDeletePreset_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 메인 컨텐츠 3컬럼 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="600"/>
            </Grid.ColumnDefinitions>
            
            <!-- ==================== 1컬럼 ==================== -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- ===== 캐릭터 ===== -->
                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="캐릭터" Style="{StaticResource SectionTitle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="48"/>
                                    <RowDefinition Height="48"/>
                                    <RowDefinition Height="48"/>
                                    <RowDefinition Height="48"/>
                                    <RowDefinition Height="48"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 등급 -->
                                <TextBlock Text="등급" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cboGrade" Grid.Row="0" Grid.Column="1" Style="{StaticResource ComboStyle}"
                                          SelectionChanged="CboFilter_SelectionChanged" Margin="0,2,5,2">
                                    <ComboBoxItem Content="전체" IsSelected="True"/>
                                    <ComboBoxItem Content="전설"/>
                                    <ComboBoxItem Content="영웅"/>
                                </ComboBox>
                                <ComboBox x:Name="cboType" Grid.Row="0" Grid.Column="2" Style="{StaticResource ComboStyle}"
                                          SelectionChanged="CboFilter_SelectionChanged" Margin="5,2,0,2">
                                    <ComboBoxItem Content="전체" IsSelected="True"/>
                                    <ComboBoxItem Content="공격형"/>
                                    <ComboBoxItem Content="마법형"/>
                                    <ComboBoxItem Content="만능형"/>
                                    <ComboBoxItem Content="지원형"/>
                                    <ComboBoxItem Content="방어형"/>
                                </ComboBox>
                                
                                <!-- 캐릭터 -->
                                <TextBlock Text="캐릭터" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cboCharacter" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                                          Style="{StaticResource ComboStyle}" Margin="0,2"
                                          SelectionChanged="CboCharacter_SelectionChanged"/>
                                
                                <!-- 스킬 -->
                                <TextBlock Text="스킬" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cboSkill" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                                          Style="{StaticResource ComboStyle}" Margin="0,2"
                                          SelectionChanged="CboSkill_SelectionChanged"/>
                                
                                <!-- 잠재능력 -->
                                <TextBlock Text="잠재능력" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                                    <TextBlock Text="공" Width="20" VerticalAlignment="Center" Foreground="#666"/>
                                    <ComboBox x:Name="cboPotentialAtk" Style="{StaticResource ComboStyle}" Width="45" Margin="0,2,10,2"
                                              SelectionChanged="Potential_SelectionChanged">
                                        <ComboBoxItem Content="0" IsSelected="True"/>
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                    </ComboBox>
                                    <TextBlock Text="방" Width="20" VerticalAlignment="Center" Foreground="#666"/>
                                    <ComboBox x:Name="cboPotentialDef" Style="{StaticResource ComboStyle}" Width="45" Margin="0,2,10,2"
                                              SelectionChanged="Potential_SelectionChanged">
                                        <ComboBoxItem Content="0" IsSelected="True"/>
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                    </ComboBox>
                                    <TextBlock Text="생" Width="20" VerticalAlignment="Center" Foreground="#666"/>
                                    <ComboBox x:Name="cboPotentialHp" Style="{StaticResource ComboStyle}" Width="45" Margin="0,2,0,2"
                                              SelectionChanged="Potential_SelectionChanged">
                                        <ComboBoxItem Content="0" IsSelected="True"/>
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                    </ComboBox>
                                </StackPanel>
                                
                                <!-- 초월 -->
                                <TextBlock Text="초월" Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                                    <ComboBox x:Name="cboTranscend" Style="{StaticResource ComboStyle}" Width="70" Margin="0,2,10,2"
                                              SelectionChanged="CboTranscend_SelectionChanged"/>
                                    <TextBlock Text="스강" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#666"/>
                                    <CheckBox x:Name="chkSkillEnhanced" Style="{StaticResource CheckBoxStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="조건" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#666"/>
                                    <ComboBox Style="{StaticResource ComboStyle}" Width="60" Margin="0,2"/>
                                </StackPanel>
                            </Grid>
                            
                            <CheckBox x:Name="chkPassiveCondition" Content="불사" Style="{StaticResource CheckBoxStyle}" Margin="0,5,0,0"
                                      Checked="PassiveBuff_Changed" Unchecked="PassiveBuff_Changed"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- ===== 장비 ===== -->
                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="장비" Style="{StaticResource SectionTitle}"/>
                            
                            <!-- 세트 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="세트" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cboEquipSet1" Grid.Column="1" Style="{StaticResource ComboStyle}" Margin="0,2,5,2"
                                          SelectionChanged="CboEquipSet_SelectionChanged"/>
                                <ComboBox x:Name="cboSetCount1" Grid.Column="2" Style="{StaticResource ComboStyle}" Margin="0,2,5,2"
                                          SelectionChanged="CboSetCount1_SelectionChanged">
                                    <ComboBoxItem Content="2세트"/>
                                    <ComboBoxItem Content="4세트" IsSelected="True"/>
                                </ComboBox>
                                <ComboBox x:Name="cboEquipSet2" Grid.Column="3" Style="{StaticResource ComboStyle}" Margin="0,2,5,2"
                                          SelectionChanged="CboEquipSet_SelectionChanged"/>
                                <TextBlock Text="2세트" Grid.Column="4" Foreground="#666" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- 무기 -->
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="무기" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cboWeapon1Main" Grid.Column="1" Margin="0,2,5,2" SelectionChanged="MainOption_Changed"/>
                                <TextBlock x:Name="txtWeapon1MainValue" Grid.Column="2" Text="" VerticalAlignment="Center" TextAlignment="Center"/>
                                <ComboBox x:Name="cboWeapon2Main" Grid.Column="3" Margin="0,2,5,2" SelectionChanged="MainOption_Changed"/>
                                <TextBlock x:Name="txtWeapon2MainValue" Grid.Column="4" Text="" VerticalAlignment="Center" TextAlignment="Center"/>
                            </Grid>
                            
                            <!-- 방어구 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="방어구" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cboArmor1Main" Grid.Column="1" Margin="0,2,5,2" SelectionChanged="MainOption_Changed"/>
                                <TextBlock x:Name="txtArmor1MainValue" Grid.Column="2" Text="" VerticalAlignment="Center" TextAlignment="Center"/>
                                <ComboBox x:Name="cboArmor2Main" Grid.Column="3" Margin="0,2,5,2" SelectionChanged="MainOption_Changed"/>
                                <TextBlock x:Name="txtArmor2MainValue" Grid.Column="4" Text="" VerticalAlignment="Center" TextAlignment="Center"/>
                            </Grid>
                            
                            <!-- 서브옵션 1행 -->
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="공%" Width="30" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubAtkRate" Cursor="Hand">
                                        <TextBox x:Name="txtSubAtkRate" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="치확%" Width="35" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubCri" Cursor="Hand">
                                        <TextBox x:Name="txtSubCri" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="막기%" Width="35" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubBlk" Cursor="Hand">
                                        <TextBox x:Name="txtSubBlk" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Text="방%" Width="30" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubDefRate" Cursor="Hand">
                                        <TextBox x:Name="txtSubDefRate" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="4" Orientation="Horizontal">
                                    <TextBlock Text="생%" Width="30" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubHpRate" Cursor="Hand">
                                        <TextBox x:Name="txtSubHpRate" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="5" Orientation="Horizontal">
                                    <TextBlock Text="효적%" Width="35" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubEffHit" Cursor="Hand">
                                        <TextBox x:Name="txtSubEffHit" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            
                            <!-- 서브옵션 2행 -->
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="공" Width="30" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubAtk" Cursor="Hand">
                                        <TextBox x:Name="txtSubAtk" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="치피%" Width="35" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubCriDmg" Cursor="Hand">
                                        <TextBox x:Name="txtSubCriDmg" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="받피감%" Width="45" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubDmgRdc" Cursor="Hand">
                                        <TextBox x:Name="txtSubDmgRdc" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Text="방" Width="30" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubDef" Cursor="Hand">
                                        <TextBox x:Name="txtSubDef" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="4" Orientation="Horizontal">
                                    <TextBlock Text="생" Width="30" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubHp" Cursor="Hand">
                                        <TextBox x:Name="txtSubHp" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="5" Orientation="Horizontal">
                                    <TextBlock Text="효저%" Width="35" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubEffRes" Cursor="Hand">
                                        <TextBox x:Name="txtSubEffRes" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            
                            <!-- 서브옵션 3행 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="약공%" Width="35" VerticalAlignment="Center" Foreground="#272727"/>
                                    <Border Background="#3A3A3A" Width="30" Height="22" MouseLeftButtonDown="Tier_MouseLeft" MouseRightButtonDown="Tier_MouseRight" Tag="txtSubWek" Cursor="Hand">
                                        <TextBox x:Name="txtSubWek" Text="0" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            
                            <!-- 장신구 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="장신구" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cboAccessoryGrade" Grid.Column="1" Margin="0,2,5,2" SelectionChanged="CboAccessoryGrade_SelectionChanged"/>
                                <ComboBox x:Name="cboAccessoryMain" Grid.Column="2" Margin="0,2,5,2" SelectionChanged="CboAccessoryOption_SelectionChanged"/>
                                <ComboBox x:Name="cboAccessorySub" Grid.Column="3" Margin="0,2" SelectionChanged="CboAccessoryOption_SelectionChanged"/>
                            </Grid>
                            
                            <!-- 장신구 값 표시 (숨김) -->
                            <TextBlock x:Name="txtAccessoryMainValue" Visibility="Collapsed"/>
                            <TextBlock x:Name="txtAccessorySubValue" Visibility="Collapsed"/>
                            <StackPanel x:Name="panelAccessorySub" Visibility="Collapsed"/>
                            
                            <!-- 세트2 (2세트 선택 시에만 표시) -->
                            <Grid x:Name="gridEquipSet2" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- ===== 펫 ===== -->
                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="펫" Style="{StaticResource SectionTitle}"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="등급" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
