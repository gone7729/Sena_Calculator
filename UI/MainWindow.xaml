<Window x:Class="GameDamageCalculator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:GameDamageCalculator.Models"
        xmlns:local="clr-namespace:GameDamageCalculator.UI"
        Title="세븐나이츠 데미지 계산기" 
        Height="800" Width="1240"
        Background="#1a1d23"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- ========== 색상 팔레트 ========== -->
        <!-- Primary: #6366f1 (Indigo) -->
        <!-- Secondary: #8b5cf6 (Violet) -->
        <!-- Accent: #f59e0b (Amber) -->
        <!-- Success: #10b981 (Emerald) -->
        <!-- Danger: #ef4444 (Red) -->
        <!-- Surface: #1e2128 (Dark) -->
        <!-- Card: #262a33 (Card Dark) -->
        
        <!-- ========== SectionBorder ========== -->
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="#262a33"/>
            <Setter Property="BorderBrush" Value="#363b47"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== ScrollBar Thumb ========== -->
        <Style x:Key="ScrollBarThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="thumbBorder" 
                                Background="#4a5568" 
                                CornerRadius="4"
                                Margin="2"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="#6366f1"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="#818cf8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== Vertical ScrollBar ========== -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="#1e2128" CornerRadius="5" Opacity="0.5"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="Height" Value="10"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid>
                                    <Border Background="#1e2128" CornerRadius="5" Opacity="0.5"/>
                                    <Track x:Name="PART_Track" IsDirectionReversed="False">
                                        <Track.Thumb>
                                            <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- ========== SectionTitle ========== -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#f8fafc"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        
        <!-- ========== LabelText ========== -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <!-- ========== InputBox ========== -->
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1e2128"/>
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="BorderBrush" Value="#363b47"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#6366f1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366f1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== ComboBox ToggleButton 템플릿 ========== -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" CornerRadius="6"
                        Background="#1e2128" BorderBrush="#363b47" BorderThickness="1"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="#94a3b8" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Data="M0,0 L4,4 L8,0 Z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="BorderBrush" Value="#6366f1"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- ========== ComboBox TextBox 템플릿 ========== -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="Transparent"/>
        </ControlTemplate>

        <!-- ========== ComboBox 드롭다운 아이템 스타일 ========== -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#1e2128"/>
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#363b47"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4f46e5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== ComboStyle (완전 다크 테마) ========== -->
        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}"
                                          Focusable="False" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox" Style="{x:Null}" Template="{StaticResource ComboBoxTextBox}"
                                     HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,3,23,3" Focusable="True"
                                     Background="Transparent" Foreground="#e2e8f0" CaretBrush="#e2e8f0"
                                     Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#1e2128" BorderBrush="#363b47" BorderThickness="1" CornerRadius="6"/>
                                    <ScrollViewer Margin="4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter Property="IsTabStop" Value="False"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== 기본 ComboBox 스타일 (Style 미지정시) ========== -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}"
                                          Focusable="False" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,3,20,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox" Style="{x:Null}" Template="{StaticResource ComboBoxTextBox}"
                                     HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,3,20,3" Focusable="True"
                                     Background="Transparent" Foreground="#e2e8f0" CaretBrush="#e2e8f0"
                                     Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#1e2128" BorderBrush="#363b47" BorderThickness="1" CornerRadius="6"/>
                                    <ScrollViewer Margin="4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter Property="IsTabStop" Value="False"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== OutputBox ========== -->
        <Style x:Key="OutputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1e2128"/>
            <Setter Property="Foreground" Value="#6366f1"/>
            <Setter Property="BorderBrush" Value="#363b47"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <TextBlock Text="{TemplateBinding Text}" 
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="4,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== CheckBoxStyle ========== -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#cbd5e1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,3,15,3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- ========== 기본 CheckBox 스타일 (다크 테마) ========== -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 체크박스 박스 -->
                            <Border x:Name="checkBorder" 
                                    Grid.Column="0"
                                    Width="16" Height="16"
                                    Background="#1e2128"
                                    BorderBrush="#4a5568"
                                    BorderThickness="1.5"
                                    CornerRadius="4"
                                    VerticalAlignment="Center">
                                <!-- 체크마크 -->
                                <Path x:Name="checkMark"
                                      Data="M2,5 L5,8 L10,2"
                                      Stroke="#ffffff"
                                      StrokeThickness="1.5"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- 라벨 -->
                            <ContentPresenter Grid.Column="1" 
                                              Margin="6,0,0,0"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <!-- 호버 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#6366f1"/>
                            </Trigger>
                            
                            <!-- 체크됨 -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="#6366f1"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#6366f1"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            
                            <!-- 체크됨 + 호버 -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="checkBorder" Property="Background" Value="#818cf8"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#818cf8"/>
                            </MultiTrigger>
                            
                            <!-- 비활성화 -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="checkBorder" Property="Background" Value="#2d3748"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#3d4556"/>
                                <Setter Property="Foreground" Value="#64748b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== RadioButton 스타일 (다크 테마) ========== -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 라디오 원형 -->
                            <Border x:Name="radioBorder" 
                                    Grid.Column="0"
                                    Width="16" Height="16"
                                    Background="#1e2128"
                                    BorderBrush="#4a5568"
                                    BorderThickness="1.5"
                                    CornerRadius="8"
                                    VerticalAlignment="Center">
                                <!-- 선택 표시 -->
                                <Ellipse x:Name="radioMark"
                                         Width="8" Height="8"
                                         Fill="#ffffff"
                                         Visibility="Collapsed"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- 라벨 -->
                            <ContentPresenter Grid.Column="1" 
                                              Margin="6,0,0,0"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <!-- 호버 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="#6366f1"/>
                            </Trigger>
                            
                            <!-- 선택됨 -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="radioBorder" Property="Background" Value="#6366f1"/>
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="#6366f1"/>
                                <Setter TargetName="radioMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            
                            <!-- 선택됨 + 호버 -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="radioBorder" Property="Background" Value="#818cf8"/>
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="#818cf8"/>
                            </MultiTrigger>
                            
                            <!-- 비활성화 -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="radioBorder" Property="Background" Value="#2d3748"/>
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="#3d4556"/>
                                <Setter Property="Foreground" Value="#64748b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== CalcButton (Primary) ========== -->
        <Style x:Key="CalcButton" TargetType="Button">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#818cf8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4f46e5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== SecondaryButton ========== -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#363b47"/>
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#464c5c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BuffOptionButtonStyle ========== -->
        <Style x:Key="BuffOptionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="44"/>
            <Setter Property="Background" Value="#363b47"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#464c5c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bool to Visibility 컨버터 -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- 그룹 버튼 너비 컨버터 -->
        <local:GroupButtonWidthConverter x:Key="GroupButtonWidthConverter"/>

        <!-- 버프 아이템 템플릿 (단일 + 그룹 통합) -->
        <DataTemplate x:Key="BuffItemTemplate">
            <Border Margin="1" Padding="5" Background="#1e2128" CornerRadius="6"
                    Visibility="{Binding ShowButton, Converter={StaticResource BoolToVisibility}}">
                <StackPanel>
                    <!-- 라벨 (그룹이면 두 개 표시) -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Label}" FontSize="9" Foreground="#64748b" 
                                   TextTrimming="CharacterEllipsis" ToolTip="{Binding Label}"/>
                        <!-- 그룹 파트너 라벨 -->
                        <TextBlock Text="{Binding GroupPartner.Label}" FontSize="9" Foreground="#64748b" 
                                   TextTrimming="CharacterEllipsis" ToolTip="{Binding GroupPartner.Label}"
                                   Visibility="{Binding HasGroupPartner, Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>
                    
                    <!-- 체크박스 영역 (그룹일 때 2개, 아니면 1개) -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <!-- 첫 번째 체크박스 (항상 표시) -->
                        <CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center" Margin="0,0,2,0"/>
                        
                        <!-- 두 번째 체크박스 (그룹일 때만 표시) -->
                        <CheckBox IsChecked="{Binding GroupPartner.IsChecked}" 
                                  VerticalAlignment="Center" Margin="0,0,2,0"
                                  Visibility="{Binding HasGroupPartner, Converter={StaticResource BoolToVisibility}}"/>
                        
                        <!-- 버튼: 그룹이면 좁게, 아니면 넓게 -->
                        <Button Click="BuffOption_Click"
                                Tag="{Binding}"
                                Width="{Binding HasGroupPartner, Converter={StaticResource GroupButtonWidthConverter}}"
                                FontSize="9"
                                Style="{StaticResource BuffOptionButtonStyle}"
                                ToolTip="{Binding LevelDisplay}">
                            <TextBlock Text="{Binding LevelDisplay}" 
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="44"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- ========== 서브옵션 슬롯 템플릿 ========== -->
        <DataTemplate x:Key="SubOptionSlotTemplate">
            <Grid Margin="0,2">
