                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 치명타 확률 / 치명타 피해 -->
                        <TextBlock Text="치명타 확률" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="치명타 피해" Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatCri" Grid.Row="1" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,5,5"/>
                        <TextBox x:Name="txtMyStatCriDmg" Grid.Row="1" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 약점 확률 / 약점 피해 -->
                        <TextBlock Text="약점 확률" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="약점공격 피해" Grid.Row="2" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatWek" Grid.Row="3" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,5,5"/>
                        <TextBox x:Name="txtMyStatWekDmg" Grid.Row="3" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 공격력 증가 / 피해 증가 -->
                        <TextBlock Text="공격력 증가" Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="피해 증가" Grid.Row="4" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatAtkRate" Grid.Row="5" Grid.Column="0" Text="0" Style="{StaticResource OutputBox}" Margin="0,0,5,5"/>
                        <TextBox x:Name="txtMyStatDmgDealt" Grid.Row="5" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 방어 관통 / 보스 피해 증가 -->
                        <TextBlock Text="방어 관통" Grid.Row="6" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="보스 피해 증가" Grid.Row="6" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatArmPen" Grid.Row="7" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,5,5"/>
                        <TextBox x:Name="txtMyStatBossDmg" Grid.Row="7" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 1-3인기 / 4-5인기 -->
                        <TextBlock Text="1-3인기 피해 증가" Grid.Row="8" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="4-5인기 피해 증가" Grid.Row="8" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatDmg1to3" Grid.Row="9" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,5,5"/>
                        <TextBox x:Name="txtMyStatDmg4to5" Grid.Row="9" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 효과 적중 / 효과 저항 -->
                        <TextBlock Text="효과 적중" Grid.Row="10" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="효과 저항" Grid.Row="10" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatEffHit" Grid.Row="11" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,5,5"/>
                        <TextBox x:Name="txtMyStatEffRes" Grid.Row="11" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 효과 적중 확률 / 회복량 증가 -->
                        <TextBlock Text="효과 적중 확률" Grid.Row="12" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="회복량 증가" Grid.Row="12" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatEffAcc" Grid.Row="13" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,5,5"/>
                        <TextBox Grid.Row="13" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>
                        
                        <!-- 받는 피해 감소 -->
                        <TextBlock Text="받는 피해 감소" Grid.Row="14" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="막기 확률" Grid.Row="14" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatDmgRdc" Grid.Row="15" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMyStatBlk" Grid.Row="15" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="5,0,0,5"/>

                        <!-- 속공 -->
                        <TextBlock Text="속공" Grid.Row="16" Grid.Column="0" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="타입피해증가" Grid.Row="16" Grid.Column="1" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtMyStatSpd" Grid.Row="17" Grid.Column="0" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMyStatDmgDealtType" Grid.Row="17" Grid.Column="1" Text="0%" Style="{StaticResource OutputBox}" Margin="0,0,0,5"/>
                        
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- ==================== 3컬럼: 대상 + 계산결과 ==================== -->
            <StackPanel Grid.Column="2">
                
                <!-- ===== 보스 ===== -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <!-- 전투 모드 선택 -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                            <RadioButton x:Name="rbBoss" Content="보스" IsChecked="True" GroupName="BattleMode" Checked="BattleMode_Changed" Foreground="#e2e8f0"/>
                            <RadioButton x:Name="rbMob" Content="잡몹" GroupName="BattleMode" Margin="15,0,0,0" Checked="BattleMode_Changed" Foreground="#e2e8f0"/>
                        </StackPanel>

                        <!-- 보스 타입 (보스 선택 시만 표시) -->
                        <StackPanel x:Name="spBossType" Grid.Column="0" Orientation="Horizontal" Margin="0,0,5,10">
                            <RadioButton x:Name="rbSiege" Content="공성" GroupName="BossType" IsChecked="True" 
                                         Checked="BossType_Changed" Foreground="#e2e8f0" Margin="0,0,10,0"/>
                            <RadioButton x:Name="rbRaid" Content="레이드" GroupName="BossType" 
                                         Checked="BossType_Changed" Foreground="#e2e8f0" Margin="0,0,10,0"/>
                            <RadioButton x:Name="rbDescend" Content="강림" GroupName="BossType"
                                         Checked="BossType_Changed" Foreground="#e2e8f0" Margin="0,0,10,0"/>
                            <RadioButton x:Name="rbGrowthDungeon" Content="성장던전" GroupName="BossType"
                                         Checked="BossType_Changed" Foreground="#e2e8f0"/>
                        </StackPanel>

                        <!-- 보스/잡몹 리스트 드롭다운 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,5,10">
                            <ComboBox x:Name="cboBoss" SelectionChanged="CboBoss_SelectionChanged" Width="200" Style="{StaticResource ComboStyle}" Visibility="Visible"/>
                            <ComboBox x:Name="cboMob" SelectionChanged="CboMob_SelectionChanged" Width="200" Style="{StaticResource ComboStyle}" Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- 방어력 / 방증% / 피감 -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="방어력" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="방증%" Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="피감" Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelText}"/>
                            
                            <TextBox x:Name="txtBossDef" Grid.Row="1" Grid.Column="0" Text="0" Margin="0,0,5,0" Style="{StaticResource InputBox}"/>
                            <TextBox x:Name="txtBossDefInc" Grid.Row="1" Grid.Column="1" Text="0" Margin="0,0,5,0" Style="{StaticResource InputBox}"/>
                            <TextBox x:Name="txtBossDmgRdc" Grid.Row="1" Grid.Column="2" Text="0" Style="{StaticResource InputBox}"/>
                        </Grid>
                        
                        <!-- 1인기 / 3인기 / 5인기 감소% -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="1인기 감소%" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="3인기 감소%" Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="5인기 감소%" Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelText}"/>
                            
                            <TextBox x:Name="txtBoss1TargetRdc" Grid.Row="1" Grid.Column="0" Text="0" Margin="0,0,5,0" Style="{StaticResource InputBox}"/>
                            <TextBox x:Name="txtBoss3TargetRdc" Grid.Row="1" Grid.Column="1" Text="0" Margin="0,0,5,0" Style="{StaticResource InputBox}"/>
                            <TextBox x:Name="txtBoss5TargetRdc" Grid.Row="1" Grid.Column="2" Text="0" Style="{StaticResource InputBox}"/>
                        </Grid>

                        <!-- 1인기 / 3인기 / 5인기 감소% -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="방깎" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="취약" Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="받피증" Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelText}"/>
                            
                            <TextBox x:Name="txtBossDefRed" Grid.Row="1" Grid.Column="0" Text="0" Margin="0,0,5,0" Style="{StaticResource InputBox}"/>
                            <TextBox x:Name="txtBossVulnerable" Grid.Row="1" Grid.Column="1" Text="0" Margin="0,0,5,0" Style="{StaticResource InputBox}"/>
                            <TextBox x:Name="txtBossDmgTaken" Grid.Row="1" Grid.Column="2" Text="0" Style="{StaticResource InputBox}"/>
                        </Grid>

                            <!-- 생명력 -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="생명력" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}"/>
                            
                            <TextBox x:Name="txtBossHp" Grid.Row="1" Grid.Column="0" Text="0" Margin="0,0,5,0" Style="{StaticResource InputBox}"/>
                        </Grid>
                        
                        <!-- 조건부 방증 패널 (기존 체력조건) -->
                        <StackPanel x:Name="panelBossCondition" Visibility="Collapsed" Orientation="Horizontal" Margin="0,5,0,0">
                            <CheckBox x:Name="chkBossCondition" Content="체력조건" Checked="BossCondition_Changed" Unchecked="BossCondition_Changed" Foreground="#e2e8f0"/>
                            <TextBlock x:Name="txtBossCondition" Foreground="#64748b" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                        
                        <!-- 스택형 방증 패널 (카르마 등) -->
                        <StackPanel x:Name="panelBossStack" Visibility="Collapsed" Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="방증 스택" Foreground="#e2e8f0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Button x:Name="btnBossStack" Content="0" Width="40" Height="26"
                                    MouseLeftButtonUp="BossStack_LeftClick" 
                                    MouseRightButtonUp="BossStack_RightClick"
                                    Style="{StaticResource BuffOptionButtonStyle}"
                                    ToolTip="좌클릭: -1 / 우클릭: +1"/>
                            <TextBlock x:Name="txtBossStackInfo" Text="/ 8" Foreground="#64748b" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                        
                        <!-- 상황 체크박스 -->
                        <TextBlock Text="상황" Style="{StaticResource SectionTitle}" Margin="0,10,0,5"/>
                        
                        <Grid Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="28"/>
                            </Grid.RowDefinitions>

                            <!-- 1행: 막기 / 체력조건 / 특정조건 -->
                            <CheckBox x:Name="chkMyBlock" Content="막기"
                                      Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                            <CheckBox x:Name="chkMyLostHpCondition" Content="체력조건"
                                      Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                            <CheckBox x:Name="chkMySkillCondition" Content="특정조건"
                                      Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Foreground="#e2e8f0"/>

                            <!-- 2행: 상태이상 확정 -->
                            <CheckBox x:Name="chkMyStatusEffect" Content="상태이상 확정"
                                      Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Foreground="#e2e8f0"/>

                            <!-- 3행: 상태이상 스택 -->
                            <TextBlock Text="상태이상 스택"
                                       Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource LabelText}"/>
                            <TextBox x:Name="txtMyTargetStackCount" Text="0"
                                     Grid.Row="2" Grid.Column="1" Width="60" Height="28"
                                     VerticalAlignment="Center" HorizontalAlignment="Left" TextChanged="BossOption_Changed"
                                     Style="{StaticResource InputBox}"/>

                            <!-- 숨겨진 체크박스 (코드 호환용) -->
                            <CheckBox x:Name="chkMyCritical" IsChecked="True" Visibility="Collapsed"/>
                            <CheckBox x:Name="chkMyWeakpoint" Visibility="Collapsed"/>
                        </Grid>
                        
                        <!-- 버튼 -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="⚔️ 데미지 계산" Style="{StaticResource CalcButton}" Click="BtnCalculate_Click" Margin="0,0,10,0"/>
                            <Button Content="🔄 초기화" Style="{StaticResource SecondaryButton}" Click="BtnReset_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- ===== 계산 결과 ===== -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <TextBlock Text="계산 결과" Style="{StaticResource SectionTitle}"/>
                        
                        <Border Background="#1e2128" CornerRadius="8" Padding="12">
                            <TextBox x:Name="txtResult"
                                     Height="280"
                                     TextWrapping="Wrap"
                                     Foreground="#e2e8f0"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="계산 버튼을 눌러 결과를 확인하세요."
                                     FontFamily="Consolas, 맑은 고딕"
                                     AcceptsReturn="True"/>
                        </Border>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
